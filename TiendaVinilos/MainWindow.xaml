<Window x:Class="TiendaVinilos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiendaVinilos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="0*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>


            </Grid.RowDefinitions>
            <ComboBox x:Name="Idioma" Grid.Column="9" RenderTransformOrigin="0.043,-0.362" Height="26" Width="NaN" Grid.Row="1" SelectionChanged="ComboBox_SelectionChanged"/>
            <Button Grid.Column="1" Content="" Grid.Row="1" RenderTransformOrigin="-3.877,0.332"/>
            <TextBox x:Name="interrogacion" Grid.Column="5" Grid.Row="1" TextWrapping="Wrap" Text="?" TextChanged="TextBox_TextChanged" TextAlignment="Center" VerticalAlignment="Center" Width="NaN" FontSize="20" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" RenderTransformOrigin="0.504,0.5" Height="NaN"/>

            <!-- Contenido de la cuadrícula -->
        </Grid>
    </Grid>
</Window>
