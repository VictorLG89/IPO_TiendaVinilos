<Window x:Class="TiendaVinilos.PerfilUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiendaVinilos"
        mc:Ignorable="d"
        Title="PerfilUser" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,10,0" Height="NaN" Width="NaN">
                <TextBlock Text="usuario_nombre" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                <TextBlock Text="Nombre Apellido" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                <TextBlock Text="usuario@email.com" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                <TextBlock Text="1234567890" Margin="0,0,0,5" HorizontalAlignment="Center"/>
            </StackPanel>
            <Button Grid.Column="1" Content="Lista de deseos" HorizontalAlignment="Center" Margin="0,5,0,0" Grid.Row="3" VerticalAlignment="Top"/>
            <Button Grid.Column="1" Content="Historial de pedidos" HorizontalAlignment="Center" Margin="0,30,0,0" Grid.Row="3" VerticalAlignment="Top"/>
            <Button Grid.Column="1" Content="Editar perfil" HorizontalAlignment="Center" Margin="0,55,0,0" Grid.Row="3" VerticalAlignment="Top"/>
            <Label Grid.Column="1" Content="cerrar sesión" HorizontalAlignment="Center" Margin="0,75,0,0" Grid.Row="3" VerticalAlignment="Top" IsEnabled="False" Height="25"/>
            <Image Grid.Column="1" Height="100" Margin="50,10,50,10" Width="100" Grid.Row="1"/>
        </Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Botón 1" Width="150" Height="30" Margin="0,0,10,0"/>
            <Button Content="Botón 2" Width="150" Height="30" Margin="0,0,10,0"/>
            <Button Content="Botón 3" Width="150" Height="30" Margin="0,0,10,0"/>
            <Button Content="Botón 4" Width="150" Height="30" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
