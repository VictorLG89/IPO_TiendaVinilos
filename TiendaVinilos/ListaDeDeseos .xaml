        <TextBlock x:Name="Articulo2" Grid.Column="3" HorizontalAlignment="Center" Height="21" Margin="8,15,0,0" Grid.Row="4" TextWrapping="Wrap" Width="107"><Run Text="Nombre articulo 2"/><LineBreak/></TextBlock>
        <TextBlock x:Name="Articulo3" Grid.Column="3" HorizontalAlignment="Center" Height="21" Margin="8,13.4,0,0" Grid.Row="5" TextWrapping="Wrap" Width="107"><Run Text="Nombre articulo 3"/><LineBreak/></TextBlock>
        <TextBlock x:Name="Articulo4" Grid.Column="3" HorizontalAlignment="Center" Height="21" Margin="8,15,0,0" Grid.Row="6" TextWrapping="Wrap" Width="107" Padding="0"><Run Text="Nombre articulo 4"/><LineBreak/></TextBlock>
        <Image x:Name="fotoperfil" Grid.Column="11" Grid.Row="1" Source="Images/fotoperfil.png" Stretch="Fill" Margin="0"/>
        <ComboBox x:Name="Idioma" Grid.Column="12" RenderTransformOrigin="0.043,-0.362" Width="NaN" Grid.Row="1" SelectionChanged="ComboBox_SelectionChanged" Margin="0.8,6,9.6,8" Height="NaN" Grid.ColumnSpan="2"/>
        <Image x:Name="ImgArticulo1" Grid.Column="2" Margin="0" Grid.Row="3" Source="Images\imgIcono.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images\imgIcono.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="ImgArticulo1_Copy" Grid.Column="2" Height="80" Margin="0" Grid.Row="6" Width="100" Source="Images/imgIcono.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images/imgIcono.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="ImgArticulo1_Copy1" Grid.Column="2" Height="80" Margin="0" Grid.Row="5" Width="100" Source="Images/imgIcono.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images/imgIcono.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="ImgArticulo1_Copy2" Grid.Column="2" Height="80" Margin="0" Grid.Row="4" Width="100" Source="Images/imgIcono.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images/imgIcono.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="imgCorazonVacio" Grid.ColumnSpan="2" Grid.Column="9" Margin="17.8,12.2,17.8,22.6" Grid.Row="3" Source="Images\corazon.png" Height="46" VerticalAlignment="Center" HorizontalAlignment="Center" Width="46">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images\corazon.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="imgCorazonVacio_Copy" Grid.ColumnSpan="2" Grid.Column="9" Margin="17.8,12.4,17.8,22.4" Grid.Row="4" Source="Images/corazon.png" Height="46" VerticalAlignment="Center" HorizontalAlignment="Center" Width="46">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images/corazon.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="imgCorazonVacio_Copy1" Grid.ColumnSpan="2" Grid.Column="9" Margin="17.8,11.6,17.8,23.2" Grid.Row="5" Source="Images/corazon.png" Height="46" VerticalAlignment="Center" HorizontalAlignment="Center" Width="46">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images/corazon.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="imgCorazonVacio_Copy2" Grid.ColumnSpan="2" Grid.Column="9" Margin="17.8,12.8,17.8,22" Grid.Row="6" Source="Images/corazon.png" Height="46" VerticalAlignment="Center" HorizontalAlignment="Center" Width="46">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images/corazon.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="carrito" Grid.Column="8" Grid.Row="1" Source="Images/carrito.png" Stretch="Fill" Margin="0"/>
        <TextBox x:Name="interrogacion" Grid.Column="9" Grid.Row="1" TextWrapping="Wrap" TextChanged="TextBox_TextChanged" TextAlignment="Center" Width="NaN" FontSize="25" HorizontalContentAlignment="Center" RenderTransformOrigin="0.504,0.5" Height="NaN" AutomationProperties.Name="?" Text="?" BorderThickness="0,0,0,0" SelectionOpacity="0" Background="#FFF1F1F1" VerticalContentAlignment="Stretch" Margin="0,0,40.6,25.4" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Image x:Name="corazon" Grid.Column="10" Height="NaN" Grid.Row="1" Source="Images/corazon.png" Stretch="Fill" Margin="7.8,8,6.2,8" Width="NaN"/>
        <Image x:Name="fotoperfil_Copy" Grid.Column="11" Grid.Row="1" Source="Images/fotoperfil.png" Stretch="Fill" Margin="0"/>
        <ComboBox x:Name="Idioma_Copy" Grid.Column="12" RenderTransformOrigin="0.043,-0.362" Width="NaN" Grid.Row="1" SelectionChanged="ComboBox_SelectionChanged" Margin="0.8,6,9.6,8" Height="NaN"/>
        <Image x:Name="imgBuscarArt" Grid.Column="6" Margin="0" Grid.Row="1" Source="Images/imgLupa.png" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images/imgLupa.png"/>
            </Image.OpacityMask>
        </Image>
        <Label x:Name="introLista" Content="¡No te olvides de añadir tus favoritos a la cesta! ;)" Grid.Column="2" Margin="0,0,16,0" Grid.Row="1" Foreground="#FF625E5E" Grid.ColumnSpan="4" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16"/>

    </Grid>
</Window>
