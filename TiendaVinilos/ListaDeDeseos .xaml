        xmlns:local="clr-namespace:TiendaVinilos"
        mc:Ignorable="d"
        Title="Lista de deseos" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="11" Grid.Column="1" HorizontalAlignment="Left" Height="349" Margin="38.6,9.8,0,0" Grid.Row="2" Grid.RowSpan="6" VerticalAlignment="Top" Width="667">
            <ScrollBar Width="Auto" MinHeight="16" HorizontalAlignment="Right"/>
        </Border>
        <TextBlock x:Name="Precio4" Grid.Column="4" HorizontalAlignment="Center" Height="21" Margin="6,15,0,0" Grid.Row="6" TextWrapping="Wrap" Width="160" Grid.ColumnSpan="4"><Run Text="Precio articulo 4"/><LineBreak/></TextBlock>
        <TextBlock x:Name="Precio3" Grid.Column="4" HorizontalAlignment="Center" Height="21" Margin="21,37.6,13.4,23.2" Grid.Row="5" TextWrapping="Wrap" Width="160" Grid.ColumnSpan="4"><Run Text="Precio articulo 3"/><LineBreak/></TextBlock>
        <TextBlock x:Name="Precio2" Grid.Column="4" HorizontalAlignment="Center" Height="21" Margin="6,15,0,0" Grid.Row="4" TextWrapping="Wrap" Width="160" Grid.ColumnSpan="4"><Run Text="Precio articulo 2"/><LineBreak/></TextBlock>
        <TextBlock x:Name="Articulo1" Grid.Column="3" HorizontalAlignment="Center" Height="21" Margin="8,15,0,0" Grid.Row="3" TextWrapping="Wrap" Width="107"><Run Text="Nombre articulo 1"/><LineBreak/></TextBlock>
